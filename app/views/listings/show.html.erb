<div class="show">
  <div class="list-img">
    <% @listing.images.each do |image| %>
      <%= cl_image_tag image, height: 646, width: 464, class: "list-img" %>
    <% end %>
  </div>
  <!-- <div class="list-img"><%= cl_image_tag @listing.images, height: 646, width: 464, class: "list-img" %></div> -->
  <div class="description">
    <h1><%= @listing.brand %></h1>
    <p class="detail"><%= @listing.detail %></p>
    <div class="d-flex">
      <p><% @listing.tag_list.each do |tag| %>
          <p class="tags"><%= link_to tag, listings_path(anchor: tag) %></p>
        <% end %></p>
    </div>
    <div class="size-price">
      <p>Â¥ <%= @listing.price %></p>
      <p><%= @listing.size %></p>
    </div>
    <h4>Booking</h4>
    <div class="container">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <%= simple_form_for [@listing, @booking] do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: { class: "datepicker" } %>
          <%= f.input :end_date, as: :string, required: false, input_html: { class: "datepicker" } %>
          <% if @listing.user != @user %>
            <%= f.button :submit, "Book", class: "button" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <% if @listing.user == @user %>
      <%= link_to "Edit this Listing", edit_listing_path, class: "button"  %>
    <% end %>
  </div>
</div>