<div class="show">
  <div class="show-container">
    <div class="list-img"><%= cl_image_tag @listing.images[0], height: 646, width: 464, class: "list-img" %></div>
    <div class="box-right">
      <div class="upper-right">
        <div class="description">
          <h1><%= @listing.brand %></h1>
          <p><%= @listing.detail %></p>
          <div class="size-price">
            <p>Â¥ <%= @listing.price %> / day</p>
            <p><%= @listing.size %></p>
          </div>
          <h4>Booking</h4>
          <div class="box-form">
            <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
              <%= simple_form_for [@listing, @booking] do |f| %>
                <%= f.input :start_date, as: :string, required: false, input_html: { class: "datepicker" } %>
                <%= f.input :end_date, as: :string, required: false, input_html: { class: "datepicker" } %>
                <% if @listing.user != @user %>
                  <%= f.button :submit, "Book", class: "button" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <% if @listing.user == @user %>
            <%= link_to "Edit this Listing", edit_listing_path, class: "button"  %>
          <% end %>
        </div>
      </div>
      <div id="map" style="width: 100%; height: 200px;" data-marker="<%= @marker.to_json %>" data-mapbox-api-key= "<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>