<div class="big">
  <h3 class="singup-h3">Log in</h3>

  <div class="signup-box">
     <img src="https://cdn-image.departures.com/sites/default/files/1547492339/gold-luxury-wedding-bridal-dress-GOLDWEDDING0119.jpg" alt="dresses" class="dress">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: "button" %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
  </div>
</div>
